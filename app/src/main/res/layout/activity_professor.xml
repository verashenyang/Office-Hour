<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app2:srcCompat="@drawable/no_photo"
            android:id="@+id/professorImageView"
            android:scaleType="fitCenter"
            android:contentDescription="@string/prof_image_description" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="8dp">

        <TextView
            android:text="@string/name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textAlignment="center"
            android:layout_margin="4dp" />

        <TextView
            android:text="@string/office_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/officeTextView"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textAlignment="center"
            android:layout_margin="4dp" />

        <Button
            android:text="@string/email_button_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailButton" />

        <Button
            android:text="@string/ratings_button_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingsButton" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="8dp">

        <TextView
            android:text="@string/label_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coursesHeadlineTextView"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_margin="4dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coursesListView" />
    </LinearLayout>


</LinearLayout>
